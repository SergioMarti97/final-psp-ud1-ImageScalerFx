<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="imagescalerfx.Controller">
   <center>
      <GridPane alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER"/>
            <RowConstraints/>
         </rowConstraints>
         <ImageView fx:id="ImageView" fitHeight="250.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
                    GridPane.rowIndex="1"/>
         <Button fx:id="ButtonStart" mnemonicParsing="false" text="Start"/>
      </GridPane>
   </center>
   <left>
      <VBox prefWidth="150.0" BorderPane.alignment="CENTER">
         <Label text="Images" textAlignment="CENTER"/>
         <ListView fx:id="ListViewImages"/>
      </VBox>
   </left>
   <bottom>
      <Label fx:id="labelStatus" alignment="CENTER" text="Task" BorderPane.alignment="TOP_LEFT" />
   </bottom>
   <right>
      <VBox prefWidth="150.0" BorderPane.alignment="CENTER">
         <Label text="Scaled instances"/>
         <ListView fx:id="ListViewScaledInstances"/>
      </VBox>
   </right>
</BorderPane>
